# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
# Unix-style newlines with a newline ending
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4
max_line_length = 80

[*.hcl]
indent_size = 2

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[*.yml]
indent_size = 2
